<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title><%=threads.title%></title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css">
	<link href='https://fonts.googleapis.com/css?family=Press+Start+2P' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css"  href="/../style.css">
</head>
<body>
	<a class="pure-button" href="/threads">Home</a><br/>
	<h1><%=threads.title%> by "<%=threads.username%>"</h1>
	<h3>Created:<%= threads.created_at %><br/>Last Updated: <%= threads.updated_at %></h3>
		<h4><%= threads.content %></h4>
		<h5>Comments</h5>
			<%users.forEach(function(users){%>
			<ul>
				<li><%=users.username%> (<%=users.created_at%>) said:
					<p><%=users.content%></p>
				</li>
			</ul>
			<%})%>



<div class="buttons">
		<a class="pure-button" href="/threads/<%= threads.id %>/edit">Edit</a>
		<form action="/threads/<%=threads.id%>/?_method=DELETE" method="POST">
			<button class="pure-button">Delete</button>
		</form>
		<form action="/threads/<%=threads.id%>/likes/?_method=PUT" method="POST">
		<button class="pure-button">Like</button>
		</form>
</div>
		<form action="/threads/<%=threads.id%>" method="POST">
			<select name="chooseUsername" placeholder="Username">
				<% allusers.forEach(function(each){ %>
					<option value="<%=each.id%>"><%=each.username%></option>
						<% }) %>
			</select>
				<br/>
			<textarea type="text" name="content" rows="15" cols="50" wrap="physical" placeholder="Write a comment!"></textarea><br/>
			<button class="pure-button pure-button-primary">Submit</button> 
		</form>
</body>
</html>