<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Filter</title>
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/grids-responsive-min.css">
	<link href='https://fonts.googleapis.com/css?family=Press+Start+2P' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css"  href="/../style.css">
</head>
<body>
	<!-- Header -->
	<div class="pure-g">
		<h1 class="pure-u-1">Filtered Topics </h1>
			<div class="pure-u-1"> 
				<a class="pure-button pure-u-1-4" href="/threads">Home</a>
				<a class="pure-button pure-u-1-4" href="/threads/newthread">New Post</a>
				<a class="pure-button pure-u-1-4" href="/threads/newuser">New Handle</a>
				</div>
				<div class="pure-u-1"><p class="pure-u-1"></p></div>
			<div class="pure-u-1">
				<form class="pure-form">
					<!-- Second header -->
					<legend class="pure-u-1-4">Filter by: </legend>
					</form>
				<a class="pure-button pure-u-1-4" href="/threads/filter/comments">Comments</a>
				<a class="pure-button pure-u-1-4" href="/threads/filter/likes">Likes</a>
				</div>
		<div class="pure-u-1-3">
		<div class="pure-menu pure-menu-horizontal">
			<ul class="pure-menu-list">
				<!-- Shows only topics, when hover shows metadata -->
				<% filter.forEach(function(threads){ %>
				<br/>
					<li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover"><a class="pure-menu-link" href="/threads/<%= threads.id %>">><%= threads.title %></a>
						<ul class="pure-u-1 pure-menu-children">
							<li class="pure-u-1 pure-menu-item">Created: <%=threads.created_at%></li>
							<li class="pure-u-1 pure-menu-item">Updated: <%=threads.updated_at %></li>
							<li class="pure-u-1 pure-menu-item">Comments: <%=threads.comments%></li>
							<li class="pure-u-1 pure-menu-item">Likes: <%=threads.likes%></li>
						</ul>
					</li>
				<% })%>
		</ul>
		</div>
	</div>
</div>
</body>
</html>