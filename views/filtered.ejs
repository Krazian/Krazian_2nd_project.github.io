<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Filter</title>
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css">
	<link href='http://fonts.googleapis.com/css?family=Press+Start+2P' rel='stylesheet' type='text/css'>
	<link rel="stylesheet" type="text/css"  href="../style.css">
</head>
<body>
	<h1>Filtered Topics </h1><br/><button><a href="/threads">Home</a></button><br/>
	<button><a href="/threads/newthread">New Post</a></button><br/>
	<label for="filter">Filter by: </label>
		<button><a href="/threads/filter/comments">Comments</a></button>
		<button><a href="/threads/filter/likes">Likes</a></button>
	<ul>
	<% filter.forEach(function(filter){ %>
		<li><a href="/threads/<%= filter.id %>"><%= filter.title %></a> <p>Created: <%=filter.created_at%><br/>Comments: <%=filter.comments%><br/>Likes: <%=filter.likes%></p></li>
	<% }) %>
</ul>
</body>
</html>